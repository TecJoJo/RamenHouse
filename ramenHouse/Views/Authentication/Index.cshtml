@using ramenHouse.ViewModels
@model UserViewModel



<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form asp-controller="Authentication" asp-action="Login">

                <h6 class="text-danger">@ViewBag.ErrorMessage</h6>


                    <!-- Email input -->
                    
                    <div data-mdb-input-init class="form-outline mb-4">


                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter valid username" />
                        <label asp-for="Email" class="form-label">Email</label>
                    <h6><span asp-validation-for="Email" class="text-danger"></span></h6>
                        
                    </div>

                    <!-- Password input -->
                    <div data-mdb-input-init class="form-outline mb-3">


                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter password" />
                        <label asp-for="Password" class="form-label">Password</label>
                    <h6><span asp-validation-for="Password" class="text-danger"></span></h6>
                    </div>



                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a href="/Authentication/Register"
                                                      class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>

</section>


