    @using ramenHouse.ViewModels
@model List<MealViewModel>


@if (Model.Count > 0)
{

    <div id="menu-grid-container" class="grid-cols-3 grid gap-3">

        @foreach (var meal in Model)
        {
            <a href="Menu/Detail/@meal.MealId">

                <div id="grid-item" class="card-height flex flex-col border shadow-md">
                    <div class="h-3/5">
                        <img src="@meal.ImageUrl" class="h-full w-full object-cover" />
                    </div>
                    <div class="grid-cols-6 m-3 grid h-2/5">
                        <h1 class="col-span-4">@meal.Title</h1>
                        <h1 class="col-span-2">@meal.Rating</h1>
                        <h1 class="col-span-6 row-span-2">@meal.Description</h1>
                        <h1 class="col-span-3">@(meal.BasePrice) €</h1>
                        <h1 class="col-span-3">@meal.AllergiesShort</h1>
                    </div>
                </div>
            </a>
        }






    </div>
}
else
{
  <div class="flex min-h-96 flex-col justify-center">
        <h1 class="text-center font-mono text-3xl text-yellow-700">Oops! We could't find any result </h1>
  </div>  
}